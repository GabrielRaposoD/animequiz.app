// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnimeType {
  TV
  OVA
  Movie
  Special
  ONA
  Music
}

enum Season {
  winter
  spring
  summer
  fall
}

enum Rating {
  G
  PG
  PG13
  R17
  R
  RX
}

model Config {
  id        Int      @id @default(autoincrement())
  animePage Int      @default(1)
  seeds     Seed[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seed {
  id        Int      @id @default(autoincrement())
  seed      String   @unique
  day       Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  config    Config   @relation(fields: [configId], references: [id])
  configId  Int
}

model Anime {
  id            Int         @id @default(autoincrement())
  myAnimeListId Int         @unique
  title         String      @unique
  banner        String
  synopsis      String
  year          Int
  genres        String[]
  themes        String[]
  studio        String
  episodes      Int
  source        String
  season        Season?
  type          AnimeType
  rating        Rating
  characters    Character[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Character {
  id      Int    @id @default(autoincrement())
  name    String @unique
  image   String
  anime   Anime  @relation(fields: [animeId], references: [id])
  animeId Int
}
